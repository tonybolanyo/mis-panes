---
layout: base.njk
title: Inicio
description: "Descubre las mejores recetas de pan casero y artesanal, además de nuestra biblioteca especializada"
---

<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center text-white">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Bienvenido a {{ site.title }}</h1>
                <p class="lead mb-4">{{ site.description }}</p>
                <div class="d-flex gap-3">
                    <a href="{{ '/recetas/' | url }}" class="btn btn-light btn-lg">
                        <i class="fas fa-bread-slice me-2"></i>
                        Ver Recetas
                    </a>
                    <a href="{{ '/libros/' | url }}" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-book me-2"></i>
                        Explorar Libros
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-bread-slice" style="font-size: 10rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</section>

<!-- Recetas Destacadas -->
<section class="featured-recipes py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Recetas Destacadas</h2>
            <p class="text-muted">Mis recetas de moda</p>
        </div>

        <div class="row">
            {% for receta in collections.destacadas %}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card recipe-card h-100 shadow-sm">
                    {% if receta.data.imagen %}
                    <img src="{{ receta.data.imagen | url }}" class="card-img-top recipe-image" alt="{{ receta.data.title }}">
                    {% else %}
                    <div class="card-img-top recipe-placeholder bg-light d-flex align-items-center justify-content-center">
                        <i class="fas fa-bread-slice fa-3x text-muted"></i>
                    </div>
                    {% endif %}

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="badge bg-primary">{{ receta.data.categoria }}</span>
                            <small class="text-muted">{{ receta.date | dateFormat }}</small>
                        </div>

                        <h5 class="card-title">
                            <a href="{{ receta.url }}" class="text-decoration-none text-dark">{{ receta.data.title }}</a>
                            {% if receta.data.destacada %}
                                <span class="ms-2 badge bg-warning text-dark" title="Receta destacada"><i class="fas fa-star"></i> Destacada</span>
                            {% endif %}
                        </h5>

                        <p class="card-text text-muted">{{ receta.templateContent | excerpt }}</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="recipe-meta">
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>{{ receta.data.tiempo }}
                                </small>
                                <small class="text-muted ms-2">
                                    <i class="fas fa-users me-1"></i>{{ receta.data.porciones }}
                                </small>
                            </div>
                            <div class="recipe-difficulty">
                                <span class="badge bg-{{ receta.data.dificultad == 'Fácil' and 'success' or (receta.data.dificultad == 'Intermedio' and 'warning' or 'danger') }}">
                                    {{ receta.data.dificultad }}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <div class="text-center mt-4">
            <a href="{{ '/recetas/' | url }}" class="btn btn-primary btn-lg">Ver Todas las Recetas</a>
        </div>
    </div>
</section>

<!-- Libros Destacados -->
{% if collections.libros.length > 0 %}
<section class="featured-books py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Biblioteca Recomendada</h2>
            <p class="text-muted">Los mejores libros de panadería para ampliar tus conocimientos</p>
        </div>

        <div class="row">
            {% for libro in collections.libros | limit(3) %}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card book-card h-100 shadow-sm">
                    <div class="row g-0 h-100">
                        <div class="col-4">
                            {% if libro.data.imagen %}
                            <img src="{{ libro.data.imagen | url }}" class="img-fluid h-100 rounded-start book-cover" alt="Portada de {{ libro.data.titulo }}">
                            {% else %}
                            <div class="bg-light h-100 d-flex align-items-center justify-content-center rounded-start">
                                <i class="fas fa-book fa-2x text-muted"></i>
                            </div>
                            {% endif %}
                        </div>
                        <div class="col-8">
                            <div class="card-body d-flex flex-column h-100">
                                <div>
                                    <h6 class="card-title">
                                        <a href="{{ libro.url }}" class="text-decoration-none text-dark">{{ libro.data.titulo }}</a>
                                    </h6>
                                    <p class="card-text">
                                        <small class="text-muted">por <strong>{{ libro.data.autor }}</strong></small>
                                    </p>
                                    <p class="card-text small">{{ libro.templateContent | excerpt(60) }}</p>
                                </div>
                                <div class="mt-auto">
                                    <small class="text-muted">{{ libro.data.año }}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <div class="text-center mt-4">
            <a href="{{ '/libros/' | url }}" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-book me-2"></i>Ver Toda la Biblioteca
            </a>
        </div>
    </div>
</section>
{% endif %}

<!-- Categorías -->
<section class="categories-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Explora por Categorías</h2>
            <p class="text-muted">Encuentra el tipo de pan que más te guste</p>
        </div>

        <div class="row">
            {% for categoria in collections.categorias %}
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="category-card text-center p-4 bg-white rounded shadow-sm">
                    <i class="fas fa-bread-slice fa-2x text-primary mb-3"></i>
                    <h5>{{ categoria }}</h5>
                    <a href="{{ ('/categoria/' + (categoria | slug) + '/') | url }}" class="btn btn-outline-primary btn-sm">Ver Recetas</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>