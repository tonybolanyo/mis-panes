<header class="header-area">
    <!-- Top Header -->
    <div class="top-header py-2 d-none d-md-block">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="social-links">
                        <a href="{{ site.social.facebook }}" class="me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="{{ site.social.instagram }}" class="me-3"><i class="fab fa-instagram"></i></a>
                        <a href="{{ site.social.twitter }}"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <span class="text-muted small">{{ site.description }}</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold fs-2" href="{{ '/' | url }}">
                <i class="fas fa-bread-slice text-primary me-2"></i>
                {{ site.title }}
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    {% for item in site.navigation %}
                    <li class="nav-item">
                        <a class="nav-link px-3" href="{{ item.url | url }}">{{ item.title }}</a>
                    </li>
                    {% endfor %}
                </ul>

                <div class="d-flex">
                    <div class="search-box me-3">
                        <input type="text" id="searchInput" class="form-control" placeholder="Buscar recetas...">
                        <button class="btn btn-link search-btn" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>